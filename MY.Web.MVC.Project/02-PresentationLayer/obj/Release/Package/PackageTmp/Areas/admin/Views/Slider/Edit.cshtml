@model _00_DataAccessLayer.ViewModel.SliderModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_adminLayoutPage.cshtml";
}

<div class="col-md-12">

    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
                Marka Ekle
            </div>
            <div class="block-controls">
                <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                @using (Html.BeginForm("Edit", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="form-group">
                        <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.SliderImage)</label>
                        <input type="file" name="image" />
                        <div style="display:none">
                            @Html.EditorFor(model => model.SliderImage, new { htmlAttributes = new { @class = "form-control rounded" } })
                        </div>
                    </div>

                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.SliderUrl)</label>
                            @Html.EditorFor(model => model.SliderUrl, new { htmlAttributes = new { @class = "form-control rounded" } })
                            <div style="color:#d32f2f">
                                @Html.ValidationMessageFor(model => model.SliderUrl)
                            </div>
                        </div>

                        <br />
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary form-control rounded" value="GÜNCELLE" />
                        </div>
                }
            </div>
        </div>
    </div>
</div>
