@model List<_00_DataAccessLayer.ViewModel.ProductListModel>

@foreach (var item in Model)
{
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 ">
        <div class="product-item">
            <div class="head">

                <div class="thumb">
                    <a href="/@item.Product.SeoUrl"><img alt="" width="300" height="200" src="~/Content/images/products/@item.ProductImage.Path" /></a>
                </div>

                <div class="price">

                    <div class="price-current">
                        <span class="currency">@item.Product.ProductPrice.ToString("C")</span>
                    </div>
                </div>
                <div class="star-holder">
                    <div class="star" data-score="4"></div>
                </div>
                <button class="btn-compare  btn-iconic"></button>
            </div>
            <div class="body">
                <h3><a href="/@item.Product.SeoUrl">@item.Product.ProductName</a></h3>
                <div class="excerpt">
                  @item.Product.ProductShortDescription
                </div>

                <div class="merged-buttons">
                    <button class="btn-add-to-cart le-btn btn-iconic ekle-sepet" data-id="@item.Product.ProductId">sepete ekle</button>
                </div>
            </div>
        </div>
    </div>
}
