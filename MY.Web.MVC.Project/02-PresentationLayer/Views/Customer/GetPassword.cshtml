
@{
    ViewBag.Title = "GetPassword";
    Layout = "~/Views/Shared/_userLayoutPage.cshtml";
}
<section id="breadcrumb">

    <div class="container">
        <div class="le-breadcrumb inline">
            <div class="iconic-nav-bar">
                <div class="icon-holder">
                    <i class="fa fa-chain"></i>
                    <span class="triangle"></span>
                </div>
                <div class="bar">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                        <li class="active">Şifremi Unuttum</li>

                    </ul>


                </div>

            </div>
        </div>
    </div>
</section>


<section id="cart" class="page-holder ">
    <div class="container">


        <div class="row ">

            <div class="col-xs-12">
                <div class="field-group">
                    <label>Mail Adresiniz</label>
                    <input type="text" id="txtEmailAddressGetPassword" class="le-input" />
                </div>
                <div class="text-right button-holder">
                    <input type="submit" id="sendPassword" class="btn le-btn btn-iconic form-control" value="Gönder" />
                </div>
            </div>
        </div>



    </div>



</section>

<script type="text/javascript">
        $(document).ready(function () {
            $("#sendPassword").click(function () {
                var EmailAddress = $("#txtEmailAddressGetPassword").val();
                var TableUrl = '@Url.Action("GetPasswordMail", "Customer")';
                $.ajax({
                    type: 'POST',
                    data: "{EmailAddress:'" + EmailAddress + "'}",
                    url: TableUrl,
                    dataType: "JSON",
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {

                        if (response != null && response.success) {
                            alert(response.responseText);
                        }
                        else {
                            alert(response.responseText);
                        }
                    },
                    error: function (msg) {
                        alert("Mail göndermede hata oluştu.");
                    }
                });

            });

        });

</script>

