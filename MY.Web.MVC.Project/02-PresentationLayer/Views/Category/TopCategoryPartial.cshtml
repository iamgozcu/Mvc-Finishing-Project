@model List<_00_DataAccessLayer.ViewModel.CategoryTopListModel>
@foreach (var item in Model)
{

    @*1. kategori*@
    <li class="yamm megamenu le-dropdown">
        <ul class="nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    @item.Category.CategoryName
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <div class="yamm-content">

                            <div class="row">
                                @foreach (var cats2 in item.SubCategories2)
                                {
                                    
                                    <div class="col-xs-12 col-md-3">
                                        @*2. kategori*@
                                        @if (cats2.SubCategoryId==item.Category.CategoryId)
                                        {
                                        <h2 class="iconic-head">
                                            <span class="icon-holder">
                                                <i class="fa fa-home"></i>
                                                <span class="triangle"></span>
                                            </span>
                                            @cats2.CategoryName
                                        </h2>
                                        }
                                        <ul>
                                            @*3. kategori*@
                                            
                                            @foreach (var cats3 in item.SubCategories2)
                                            {
                                                if (cats3.SubCategoryId == item.Category.CategoryId)
                                                {
                                                    <li>
                                                        <a href="@Url.Action("Index", "ProductGrid", new { ProductGridSeoUrl = cats3.ProductGridSeoUrl})">@cats3.CategoryName</a>
                                                        @*<a href="/@cats3.ProductGridSeoUrl">@cats3.CategoryName</a>*@
                                                    </li>
                                                }

                                            }
                                        </ul>

                                    </div>
                                     }
                                
                            </div>
                        </div>
                    </li>
                </ul>

            </li>
        </ul>
    </li>

}
