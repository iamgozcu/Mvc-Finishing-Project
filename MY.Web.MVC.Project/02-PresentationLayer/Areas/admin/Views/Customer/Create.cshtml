@model _00_DataAccessLayer.ViewModel.CustomerModel
@{
    ViewBag.Title = "Müşteri Ekle";
    Layout = "~/Areas/admin/Views/Shared/_adminLayoutPage.cshtml";
}

<div class="col-md-12">

    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
                Müşteri Ekle
            </div>
            <div class="block-controls">
                <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                @using (Html.BeginForm())
                {
                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model=>model.CustomerName)</label>
                            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control rounded" } })
                            <div style="color:#d32f2f">
                                @Html.ValidationMessageFor(model => model.CustomerName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.CustomerSurname)</label>
                            @Html.EditorFor(model => model.CustomerSurname, new { htmlAttributes = new { @class = "form-control rounded" } })
                            <div style="color:#d32f2f">
                                @Html.ValidationMessageFor(model => model.CustomerSurname)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.EmailAddress)</label>
                            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control rounded" } })
                            <div style="color:#d32f2f">
                                @Html.ValidationMessageFor(model => model.EmailAddress)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.Password)</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control rounded", Type = "password" } })
                            <div style="color:#d32f2f">
                                @Html.ValidationMessageFor(model => model   .Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.ConfirmPassword)</label>
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control rounded", Type = "password" } })
                            <div style="color:#d32f2f">
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>

                        </div>

                        <br />
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary form-control rounded" value="EKLE" />
                        </div>

                }
            </div>
        </div>
    </div>
</div>
