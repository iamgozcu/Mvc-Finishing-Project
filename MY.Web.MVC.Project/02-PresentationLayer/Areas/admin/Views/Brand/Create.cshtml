@model _00_DataAccessLayer.ViewModel.BrandModel
@{
    ViewBag.Title = "Marka Ekle";
    Layout = "~/Areas/admin/Views/Shared/_adminLayoutPage.cshtml";
}

<div class="col-md-12">

    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
                Marka Ekle
            </div>
            <div class="block-controls">
                <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                @using (Html.BeginForm("Create", "Brand", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.BrandName)</label>
                            @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control rounded" } })
                            <div style="color:#d32f2f">
                                @Html.ValidationMessageFor(model => model.BrandName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.Sorting)</label>
                            @Html.EditorFor(model => model.Sorting, new { htmlAttributes = new { @class = "form-control rounded" } })
                            <div style="color:#d32f2f">
                                @Html.ValidationMessageFor(model => model.Sorting)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.BrandImage)</label>
                            <input type="file" name="image" />
                        </div>

                        <br />
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary form-control rounded" value="EKLE" />
                        </div>
                }
            </div>
        </div>
    </div>
</div>
