@model _00_DataAccessLayer.ViewModel.ShowcaseModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/_adminLayoutPage.cshtml";
}


<div class="col-md-12">

    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
                Marka Ekle
            </div>
            <div class="block-controls">
                <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                @using (Html.BeginForm("Create", "Showcase"))
                {
                    <div class="form-group">
                        <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.ShowcaseName)</label>
                        @Html.EditorFor(model => model.ShowcaseName, new { htmlAttributes = new { @class = "form-control rounded" } })
                        <div style="color:#d32f2f">
                            @Html.ValidationMessageFor(model => model.ShowcaseName)
                        </div>
                    </div>
                        <div class="form-group">
                            <label for="input-demo-n-1">@Html.DisplayNameFor(model => model.ShowcaseSortNumber)</label>
                            @Html.EditorFor(model => model.ShowcaseSortNumber, new { htmlAttributes = new { @class = "form-control rounded" } })
                            <div style="color:#d32f2f">
                                @Html.ValidationMessageFor(model => model.ShowcaseSortNumber)
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary form-control rounded" value="EKLE" />
                        </div>
                }
            </div>
        </div>
    </div>
</div>